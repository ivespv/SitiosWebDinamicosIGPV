  <h1>Editar Producto</h1>
  <form action="/productos/editar/<%= producto.id %>" method="POST">
    <label for="codigo">Código:</label>
    <input type="text" name="codigo" id="codigo" value="<%= producto.codigo %>" required />
    <br />
    <label for="codint">Código Interno:</label>
    <input type="text" name="codint" id="codint" value="<%= producto.codint %>" required />
    <br />
    <label for="detalle">Detalle:</label>
    <input type="text" name="detalle" id="detalle" value="<%= producto.detalle %>" required />
    <br />
    <label for="unidad">Unidad:</label>
    <input type="text" name="unidad" id="unidad" value="<%= producto.unidad %>" required />
    <br />
    <label for="concentracion">Concentración:</label>
    <input type="text" name="concentracion" id="concentracion" value="<%= producto.concentracion %>" required />
    <br />
    <label for="psicotropico">Psicotrópico:</label>
    <input type="text" name="psicotropico" id="psicotropico" value="<%= producto.psicotropico %>" required />
    <br />
    <label for="estupefaciente">Estupefaciente:</label>
    <input type="text" name="estupefaciente" id="estupefaciente" value="<%= producto.estupefaciente %>" required />
    <br />
    <button type="submit">Modificar Producto</button>
    <a href="/productos" class="btn-Volver">Volver</a>
  </form>
