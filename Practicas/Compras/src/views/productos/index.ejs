  <h1>Lista de Productos</h1>
  
  <a href="/productos/crear" class="btn-Volver">Registrar Productos</a>
  <form id="bulk-actions" action="/productos/eliminar" method="POST">
  <table>
    <thead>
      <tr>
        <th><input type="checkbox" id="select-all" onclick="toggleSelectAll(this)" /></th>
        <th>ID</th>
        <th>Código</th>
        <th>Cod. CIE 10</th>
        <th>Detalle</th>
        <th>Unidad</th>
        <th>Concentración</th>
        <th>Psicotrópico</th>
        <th>Estupefaciente</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% productos.forEach(producto => { %>
        <tr>
          <td><input type="checkbox" name="productos[]" value="<%= producto.id %>" /></td>
          <td><%= producto.id %></td>
          <td><%= producto.codigo %></td>
          <td><%= producto.codint %></td>
          <td><%= producto.detalle %></td>
          <td><%= producto.unidad %></td>
          <td><%= producto.concentracion %></td>
          <td><%= producto.psicotropico %></td>
          <td><%= producto.estupefaciente %></td>
          <td>
            <form action="/productos/eliminar/<%= producto.id %>" method="POST" style="display:inline;">
              <button type="submit">Eliminar</button>
            </form>
            <!-- <a href="/productos/editar/<%= producto.id %>">Editar</a> -->
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  
 <!-- Pagination -->
 <div class="pagination">
  <% if (currentPage > 1) { %>
    <a href="?page=<%= currentPage - 1 %>">Anterior</a>
  <% } %>
  <% for (let i = 1; i <= totalPages; i++) { %>
    <a href="?page=<%= i %>" class="<%= i === currentPage ? 'active' : '' %>"><%= i %></a>
  <% } %>
  <% if (currentPage < totalPages) { %>
    <a href="?page=<%= currentPage + 1 %>">Siguiente</a>
  <% } %>
</div>
<button type="submit">Eliminar Seleccionados</button>
<button type="button" id="edit-selected" class="btn">Modificar Seleccionado</button>
</form>

  <footer>
    &copy; 2025 Caja Nacional de Salud - Todos los derechos reservados
  </footer>
  <script>
    document.querySelector('.btn').addEventListener('click', function(event) {
      event.preventDefault(); // Evitar el comportamiento por defecto del enlace
      const selectedCheckbox = document.querySelector('input[name="productos[]"]:checked');
      if (selectedCheckbox) {
        const selectedId = selectedCheckbox.value;
        window.location.href = `/productos/editar/${selectedId}`; // Redirigir a la página de edición
      } else {
        alert('Por favor, selecciona un producto para modificar.');
      }
    });
  </script>
  <script>
    document.getElementById('edit-selected').addEventListener('click', function(event) {
      const selectedCheckbox = document.querySelector('input[name="productos[]"]:checked');
      if (selectedCheckbox) {
        const selectedId = selectedCheckbox.value;
        window.location.href = `/productos/editar/${selectedId}`; // Redirigir a la página de edición
      } else {
        alert('Por favor, selecciona un producto para modificar.');
      }
    });
  </script>  



</body>
