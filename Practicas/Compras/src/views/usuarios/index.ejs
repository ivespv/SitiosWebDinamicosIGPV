  <h1 class="title">Lista de Usuarios</h1>
  <form action="/usuarios/crear" method="GET" style="display:inline;">
    <button type="submit" class="btn modificar">Crear Usuario</button>
  </form>
   <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Correo</th>
        <th>Nombre</th>
        <th>Usuario</th>
        <th>Rol</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% usuarios.forEach(usuario => { %>
        <tr>
          <td><%= usuario.id %></td>
          <td><%= usuario.correo %></td>
          <td><%= usuario.nombre %></td>
          <td><%= usuario.nusuario %></td>
          <td><%= usuario.rol %></td>
          <td>
            <form action="/usuarios/editar/<%= usuario.id %>" method="GET" style="display:inline;">
                <button type="submit" class="btn-Volver">Modificar</button>
            </form>
            <form action="/usuarios/eliminar/<%= usuario.id %>" method="POST" style="display:inline;">
                <button type="submit" class="btn-Volver">Eliminar</button>
            </form>
        </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
